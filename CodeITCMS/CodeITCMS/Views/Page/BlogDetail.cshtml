                                                </li>
                                                <li>
                                                    <a href="javascript:void(0)">March 2018</a>
                                                </li>
                                            </ul>*@
                                        </div><!-- block-blog -->
                                    </div>
                                </div><!-- blog_right -->
                            </div>
                        </section>
                    </main>
                    <!-- .site-main -->
                </div>
                <!-- .content-area -->
            </div>


        </div>
        <footer id="colophon" class="site-footer" role="contentinfo">
            <div class="site-info">
                <div class="section-footer text-left-align">
                    @if (ViewBag.PageName != "Contact")
                    {

                        @Html.Action("GenerateFooter", "Home")

                    }
                </div>
                <div class="footer_bottom">
                    <div class="container">
                        @Html.Action("GenerateFooterMenu", "Home")
                        <p class="copyright">&copy; 2018- Direct Cremation. All Right Reserved. Designed by <a href="http://www.digitalcherry.co.uk/" target="_blank">DigitalCherry</a></p>
                    </div>
                </div>
            </div>
            <!-- .site-info -->
        </footer>
        <!-- Royal Slider -->
        <script src="~/js/jquery.royalslider.min.js"></script>
        <script src="~/js/jquery.easing-1.3.js"></script>
        <script type="text/javascript">
            jQuery(document).ready(function ($) {
                $(".royalSlider").royalSlider({
                    // options go here
                    // as an example, enable keyboard arrows nav
                    keyboardNavEnabled: true,
                    arrowsNav: false,
                    addActiveClass: true,
                    autoPlay: {
                        enabled: true,
                        pauseOnHover: true,
                        stopAtAction: false,
                        delay: 5000,
                        transitionType: 'fade',
                        transitionSpeed: 500,
                    }

                });

                $("#btnRequest").click(function () {
                    var name = $("#txtFName").val() + " " + $("#txtLName").val();
                    var email = $("#txtEmail").val();
                    var phone = $("#txtPhone").val();

                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("Contact","Home")",
                        data: JSON.stringify({ Name: name, Email: email, PhoneNumber: phone }),
                        contentType: "application/json",
                        success: function (response) {
                            alert("Query submitted successfully.");
                        }
                    });
                });

                $("#btnCallback").click(function () {
                    var name = $("#txtFName").val() + " " + $("#txtLName").val();
                    var email = $("#txtEmail").val();
                    var phone = $("#txtPhone").val();
                    var query = $("#txtQuery").val();

                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("Contact","Home")",
                        data: JSON.stringify({ Name: name, Email: email, PhoneNumber: phone, Query: query }),
                        contentType: "application/json",
                        success: function (response) {
                            alert("Query submitted successfully.");
                        }
                    });
                });
            })
        </script>

        <script src="~/js/custom.js"></script>
        <script src="~/js/mCustomScrollbar.min.js"></script>
        <link rel="stylesheet" href="~/Content/css/mCustomScrollbar.min.css" type="text/css" media="all">

        <!-- Owl Stylesheets -->
        <script src="~/js/owl.carousel.js"></script>

        <!-- animation -->
        <script src="~/js/aos.js"></script>

</body>
</html>


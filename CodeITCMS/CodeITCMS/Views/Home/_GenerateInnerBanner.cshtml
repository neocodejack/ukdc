@using CodeITCMS.Models
@model PageContext
@{ 
    var imagePath = string.Empty;
    if (ViewBag.IsBlogDetailPage == false) {
        imagePath = "InnerBanners/" + Model.FeatureImage;
    }
    else
    {
        imagePath = "../../InnerBanners/" + Model.FeatureImage;
    }

}
<div class="banner inner-banner" style="background-image: url('@imagePath');">
    <div class="container">
        <div class="page-title">
            <h2>@Model.FeatureText<span class="cross_icon"><i class="fas fa-times"></i></span></h2>
            <ul class="breadcrum">
                <li><a href="javascript:void(0)">Home</a> <span class="separator"><i class="fas fa-angle-right"></i></span> </li>
                <li>@Model.PageTitle</li>
            </ul>
        </div>
    </div>
</div>
